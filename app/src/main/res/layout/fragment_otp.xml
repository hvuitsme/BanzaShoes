<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.OtpFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/x2"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_otp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_x3" />

        <LinearLayout
            android:id="@+id/otp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp_box_1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp_box_2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp_box_3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp_box_4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp_box_5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/otp_box_6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:padding="@dimen/x1"
            android:text="@string/verify_otp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
